.hidden-box
  position absolute
  width 0
  height 0
  visibility hidden

.radio-box
  position relative
  display inline-block
  margin 1px
  width 16px
  height 16px
  border 1px solid $color-grey
  border-radius 8px
  box-sizing border-box

.hidden-box:checked ~ .radio-box:before
  content ''
  position absolute
  width 8px
  height 8px
  background-color $color-grey
  border-radius 4px
  top 3px
  left 3px

