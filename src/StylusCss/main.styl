@import "pallete.styl"

body
  font-family "Century Gothic", sans-serif
  font-size 14px
  margin 0

.main_wrap
  display flex
  margin 40px auto 0
  width 1154px
  justify-content space-between

.left-aside,
.right-aside
  width 240px
  min-width 240px

.left-aside
  padding-left 40px
  box-sizing border-box

.logo_wrap
  margin-bottom 18px

.invite-button {
  background-color: #f19821;
  color: aliceblue;
  text-align: center;
  width: 100%;
  font-weight: bold;
  line-height: 40px;
}

.content
  flex-grow 1
  box-sizing border-box

.-content-padding
  padding-left 14px
  padding-right 14px
  box-sizing border-box

.title
  margin-top 0
  color $color-orange
  font-size 24px

.-gothic-text
  line-height 20px
  color $color-blue

.-color_grey
  color $color-grey

.info
  width 100

.invite-form
  padding 10px 15px
  width 100%
  box-sizing border-box

.gallery
  position relative
  width 100%
  margin-top 36px
  display flex
  justify-content space-between
  flex-wrap wrap
  box-sizing: border-box

.gallery-item
  width 188px
  padding 0 14px 8px
  box-sizing border-box

.gallery-item_img
  width 160px
  height 160px
  background-color $color-green
  margin-bottom 12px

.gallery-item_text
  height 36px
  padding-bottom 16px
  text-align center

.input
  border none
  border-bottom 1px solid $color-grey
  font-style italic
  margin-top 1px
  padding 10px 0
  box-sizing border-box
  display block
  width 100%
  font-family "Century Gothic", sans-serif
  outline none
  &.-light-focus:focus
    border-bottom: 1px solid $color-blue

.button
  display inline-block
  border none
  color $color-white
  background-color $color-green
  padding 8px 16px 9px
  font-family "Century Gothic", sans-serif
  font-weight bold
  cursor pointer

.submit-wrap
  width 100%
  text-align right
  margin-top 30px

.search-form
  position relative
  width 400px
  margin 35px 0

.search-submit
  position absolute
  display block
  width 36px
  height 36px
  top 0
  right 0
  border none
  background-image url('data:image/png;base64,')
  background-repeat no-repeat
  cursor pointer
  background-color transparent
  background-position-y center
  background-position-x right
  outline none

@import "mobile.styl"
