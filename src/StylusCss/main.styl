@import "pallete.styl"

body
  font-family "Century Gothic", sans-serif
  font-size 14px
  margin 0

.main_wrap
  display flex
  margin 40px auto 0
  width 1154px
  justify-content space-between

.left-aside,
.right-aside
  width 240px
  min-width 240px

.left-aside
  position relative
  padding-left 40px
  box-sizing border-box

.logo_wrap
  margin-bottom 18px

.pointer-back
  position absolute
  left 6px
  top 8px
  width 24px
  height 22px
  background-image url('data:image/png;base64,')
  &:hover
    background-image url('data:image/png;base64,')

.header
  display flex
  justify-content space-between
  margin-bottom 6px
  position relative
  z-index 10
  max-height 53px

.invite-block
  &.-alert
    padding: 8px
    font-size: 16px
  &.-with-shadow
    box-shadow 0 0 16px rgba(0, 0, 0, 0.20)

.invite-wrap
  width 240px
  min-width 240px


.invite-button
  background-color $color-orange
  border 1px solid $color-orange
  color $color-white
  text-align center
  width 100%
  font-weight bold
  line-height 40px
  box-sizing border-box
  cursor pointer
  &:hover
    background-color $color-orange_hover
    border 1px solid $color-orange_hover-border
  &.-active
    background-color $color-orange_active
    border 1px solid $color-orange_active-border

.content
  flex-grow 1
  box-sizing border-box
  position relative

.-content-padding
  padding-left 14px
  padding-right 14px
  box-sizing border-box

.title
  margin-top 0
  color $color-orange
  font-size 24px

.-gothic-text
  line-height 20px
  color $color-blue

.-color_grey
  color $color-grey

.-color_green
  color $color-green
.-background-color_green
  background-color  $color-green

.-color_orange
  color $color-orange
.-background-color_orange
  background-color $color-orange

.-color_blue
  color $color-blue

.info
  width 100
  text-align justify

.invite-form
  padding 10px 15px
  width 100%
  box-sizing border-box
  background-color $background-color

.gallery_wrap
  margin-top 36px

.gallery
  position relative
  width 100%
  display flex
  justify-content space-between
  flex-wrap wrap
  box-sizing: border-box
  &:after
    content: "";
    width 188px

.gallery_not-found
  text-align center
  font-size 16px
  margin-top 36px

.gallery_loader
  text-align center

.gallery-item
  width 188px
  padding 0 14px 8px
  box-sizing border-box

.gallery-item_img
  width 160px
  height 160px
  background-color $color-grey-light
  margin-bottom 12px
  overflow hidden

.gallery-item_text
  height 36px
  padding-bottom 16px
  text-align center

.gallery-item_wrap
  text-decoration none !important


.input
  border none
  border-bottom 1px solid $color-grey
  font-style italic
  margin-top 1px
  padding 10px 0
  box-sizing border-box
  display inline-block
  width 100%
  font-family "Century Gothic", sans-serif
  outline none
  background-color transparent
  &.-light-focus:focus
    border-bottom: 1px solid $color-blue
  &.-select
    padding 6px 0
    font-style none;
  &.-inline
    width auto
    margin-right 40px
  &.-error
    border-bottom: 1px solid $color-red
    color $color-red
  &.-w_180
    width 180px
    min-width 180px

.input-error-text
  color: $color-red
  text-align right
  font-size 10px

.button
  display inline-block
  border none
  color $color-white
  background-color $color-green
  padding 8px 16px 9px
  font-family "Century Gothic", sans-serif
  font-weight bold
  cursor pointer
  margin-left 12px
  &:disabled
    background-color $color-grey

.submit-wrap
  width 100%
  text-align right
  margin-top 30px
  display flex
  justify-content flex-end

.search-form
  position relative
  width 400px
  margin 35px 0

.search-submit
  position absolute
  display block
  width 36px
  height 36px
  top 0
  right 0
  border none
  background-image url('data:image/png;base64,')
  background-repeat no-repeat
  cursor pointer
  background-color transparent
  background-position-y center
  background-position-x right
  outline none

.house-info-wrap
  display flex
  position relative
  z-index 1

.house-info_text
  padding-top 8px
  font-weight bold

.house-info_image
  width 240px
  height 240px
  margin-top: 20px;
  background-color $color-grey
  overflow hidden

.house-stat
  margin-left 40px
  flex-grow 1

.house-stat_notice
  padding-top 10px
  font-size 12px

.house-stat_graph-wrap
  display flex


.graph
  position relative
  width 340px
  height 210px
  margin-top 21px
  &:before
    display inline-block
    position absolute
    bottom -18px
    width 100%
    text-align center
    font-size: 12px;
    color: $color-grey
    content 'Дни'
  &:after
    display block
    transform rotate(-90deg)
    left -36px
    top 40%
    position absolute
    font-size: 12px;
    color: $color-grey
    content 'Сумма'


.graph-legend
  position relative
  list-style-type none
  flex-grow 1
  margin 0
  padding 6px 10px 24px
  &:after
    content attr(data-update)
    position absolute
    bottom 0
    left 21px
    font-size 12px
    color $color-grey


.graph-legend_item
  display flex
  padding 10px

.graph-legend_item-title
  flex-grow 1;
  padding-left 8px

.-sum-font,
.graph-legend_item-sum
  font-weight bold
  font-size 16px !important

.bills-table_wrap
  margin-top 55px
  margin-bottom 30px

.bills-table_tabs
  display flex
  flex-direction row-reverse
  justify-content flex-end
  position relative
  margin 0
  padding 0
  list-style-type none
  width 100%
  height 28px

.tabs_item-wrap
  width 130px
  position relative
  margin-right -7px
  overflow hidden
  padding-right 15px
  box-sizing border-box
  cursor pointer
  &:after
    content ''
    position absolute
    width 14px
    height 26px
    border-right 1px solid $color-grey
    border-bottom  1px solid $color-grey
    border-top  1px solid $color-grey
    background-color $background-color
    transform: skewX(25deg)
    top 0
    right 7px

  .tabs_item
    text-align center
    font-size 12px
    line-height 26px
    border 1px solid $color-grey
    background-color $background-color
    border-right none
    box-sizing border-box


.tabs_item-wrap.-active
  z-index 100
  &:after
    border-bottom  1px solid $background-color
  & .tabs_item
    font-weight bold
    border-bottom  1px solid $background-color

.bills-table_content
  border 1px solid $color-grey
  margin-top -1px

.bills-list_header
  display flex
  height 34px
  background-color $color-green
  line-height 34px
  color $color-white

.bills-list_row
  display flex
  //line-height 40px
  border-top 1px solid $color-grey-light

.bills-list_item
  padding 12px 16px
  font-size 12px
  &.-date
    min-width 50px
  &.-sum
    min-width 100px
    padding-left 0 !important
    text-align right
  &.-desc
    flex-grow 1
  &.-cont
    min-width 160px
  &.-debit:before
    content '- '
  &.-credit:before
    content '+ '
  &.-question
    display block
    min-width 32px
    font-family: Open Sans sans-serif;
    font-size: 30px;
    padding: 0;
    font-weight: bold;
    color $color-grey-light
    text-decoration none

.bills-list_header .bills-list_item
  padding 0 16px

.bills_list_question
  position relative
  display flex
  align-items center
  padding 10px 16px
  background-color $color-grey-background
  justify-content space-between
  &:before
    content ''
    position absolute
    width 14px
    height 14px
    background-color $color-grey-background
    top -7px
    right 17px
    transform rotate(45deg)


.diagram
  margin 25px 30px
  font-size 12px

.diagram_item
  display flex
  height 40px
  align-items center


.diagram_item-title
  width 200px
  text-align right
  padding-right 12px

.diagram_item-data
  flex-grow 1
  display flex
  align-items center
  height 100%
  border-left 1px solid $color-grey
.diagram_item-progress-bar
  height 25px

.diagram_item-sum
  padding-left 10px
  white-space nowrap

@import "controls.styl"
@import "svg-graph.styl"

@import "mobile.styl"
